<Window x:Class="Installer.Applications.Update.UpdaterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:installer="clr-namespace:Installer"
        Title="UpdaterWindow"
        Height="100"
        Width="300"
        ResizeMode="NoResize"
        Padding="8">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="30">
            <Run Text="Updating" />
            <Run Text="{x:Static installer:Constants.ApplicationTitle}" />
        </TextBlock>

        <ProgressBar Grid.Row="1"
                     HorizontalAlignment="Stretch"
                     Minimum="0"
                     Maximum="1"
                     Height="12"
                     VerticalAlignment="Center"
                     Value="{Binding InstallationProgress, Mode=OneWay}" />
    </Grid>
</Window>