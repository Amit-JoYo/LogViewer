<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SharpTail.Ui.Controls">

    <Style TargetType="{x:Type local:AlertControl}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AlertControl}">
                    <Border Background="#64000000">
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    Background="DodgerBlue"
                                    MinHeight="300">

                            <TextBlock
                                Margin="10"
                                Text="Sorry, something went wrong. A team of highly trained monkeys has been dispatched to deal with this situation."
                                FontSize="16" />

                            <TextBlock TextWrapping="Wrap"
                                       Text="{TemplateBinding ErrorMessage}"
                                       FontSize="16"
                                    Margin="10" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>