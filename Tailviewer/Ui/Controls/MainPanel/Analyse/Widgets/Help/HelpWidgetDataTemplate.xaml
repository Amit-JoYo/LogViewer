<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:help="clr-namespace:Tailviewer.Ui.Controls.MainPanel.Analyse.Widgets.Help">
    
    <DataTemplate DataType="{x:Type help:HelpWidgetViewModel}">
        <TextBlock TextWrapping="Wrap">
            <Run Text="Congratulations, you've just created a new analysis" /><LineBreak />
            <Run Text="In order to get started, you want to:" /><LineBreak />
            <Run Text=" -Select the data sources to analyse" /><LineBreak />
            <Run Text=" -Add one or more widgets that show you exactly what you want" /><LineBreak />
            <Run Text=" -Save the analysis so you can find it for future use" />
        </TextBlock>
    </DataTemplate>
    
</ResourceDictionary>