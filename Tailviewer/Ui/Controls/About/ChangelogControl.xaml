<UserControl x:Class="Tailviewer.Ui.Controls.About.ChangelogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Metrolib.Controls;assembly=Metrolib"
             xmlns:about="clr-namespace:Tailviewer.Ui.Controls.About"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance about:ChangelogViewModel}">

    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Tailviewer;component/Ui/Controls/ActionCenter/ChangeTemplate.xaml" />
    </UserControl.Resources>
    
    <Grid>
        <controls:FlatScrollViewer>
            <ItemsControl ItemsSource="{Binding Changes}" />
        </controls:FlatScrollViewer>
    </Grid>
    
</UserControl>
